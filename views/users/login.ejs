<% include ../partials/_header.ejs %>

<div class="login-screen">

  <%if(locals.err) {%>
    <div class="alert alert-danger alert-login" role="alert"><%=err%></div>
    <% } %>

  <div class ="container">

    <div id="main-container">
      <div class="row">

        <div class="col-md-2"></div>

        <div class="col-md-8">
          <h3 style="text-align: center;">Log In to College Bazaar</h3>
          <form class="login-form" action="/users/login" method="POST">
            <div class="form-group">
              <input type="text" name="name" class="form-control login-field" value="" placeholder="Enter your name" id="login-name" autocomplete="off">
              <label class="login-field-icon fui-user" for="login-name"></label>
            </div>
            <div class="form-group">
              <input type="password" name="password" class="form-control login-field" value="" placeholder="Password" id="login-pass" autocomplete="off">
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>
            <input type="submit" class="btn btn-primary btn-lg btn-block" href="#" value="Log in">
            <a class="login-link" href="/users/new" style="font-size: 20px; color: #2980b9">Don't have an account? Sign Up for one!</a>
          </form>
        </div>

        <div class="col-md-2"></div>

      </div>
    </div>
  </div>
</div>









